@model PizzeriaDelish.Models.CheckoutViewModels.DeliveryDetailsViewModel

@{
    ViewData["Title"] = "Leveransadress";
}

<h2>Leveransadress</h2>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Checkout" asp-action="DeliveryDetails" method="post">
                <div class="form-group">
                    <div asp-validation-summary="All">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Address.FirstName" class="control-label"></label>
                    <input asp-for="Address.FirstName" class="form-control" />
                    <span asp-validation-for="Address.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address.Surname" class="control-label"></label>
                    <input asp-for="Address.Surname" class="form-control" />
                    <span asp-validation-for="Address.Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address.StreetAddress" class="control-label"></label>
                    <input asp-for="Address.StreetAddress" class="form-control" />
                    <span asp-validation-for="Address.StreetAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address.City" class="control-label"></label>
                    <input asp-for="Address.City" class="form-control" />
                    <span asp-validation-for="Address.City" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address.PostalCode" class="control-label"></label>
                    <input asp-for="Address.PostalCode" class="form-control" />
                    <span asp-validation-for="Address.PostalCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <a asp-controller="Home"
                   asp-action="Index"
                   class="btn btn-default">
                    Tillbaka till menyn
                </a>
                <input type="submit" value="Fortsätt till betalning" class="btn btn-primary" />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}