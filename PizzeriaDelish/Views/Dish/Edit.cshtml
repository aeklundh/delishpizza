@model PizzeriaDelish.Models.DishViewModels.EditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Dish</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Dish.DishId" />
            <div class="form-group">
                <label asp-for="Dish.Name" class="control-label"></label>
                <input asp-for="Dish.Name" class="form-control" />
                <span asp-validation-for="Dish.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dish.Description" class="control-label"></label>
                <input asp-for="Dish.Description" class="form-control" />
                <span asp-validation-for="Dish.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dish.Price" class="control-label"></label>
                <input asp-for="Dish.Price" class="form-control" />
                <span asp-validation-for="Dish.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dish.CategoryId" class="control-label"></label>
                <select asp-for="Dish.CategoryId" asp-items="@Model.Categories" class="form-control"></select>
                <span asp-validation-for="Dish.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Dish.Active" /> @Html.DisplayNameFor(model => model.Dish.Active)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Ingredienser</th>
                        </tr>
                    </thead>
                    <tbody>
                        @*@foreach (PizzeriaDelish.Models.DishViewModels.EditViewModel.CheckedIngredient i in Model.Ingredients)
                        {
                            <tr>
                                <td>
                                    <label>
                                        @i.Ingredient.Name
                                        <input type="checkbox" name="Ingredient" checked="@i.Checked" />
                                    </label>
                                </td>
                            </tr>
                        }*@
                        @for (int i = 0; i < Model.Ingredients.Count; i++)
                        {
                            <tr>
                                <td>
                                    @Html.CheckBoxFor(x => x.Ingredients[i].Selected)
                                    @Html.HiddenFor(x => x.Ingredients[i].Text)
                                    @Html.HiddenFor(x => x.Ingredients[i].Value)
                                    <span>@Model.Ingredients[i].Text</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

