@model IndexViewModel
@{
    ViewData["Title"] = "Profile";
    ViewData.AddActivePage(ManageNavPages.Index);
}

<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User.UserName"></label>
                <input asp-for="User.UserName" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="User.Email"></label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="User.Email" class="form-control" />
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <input asp-for="User.Email" class="form-control" />
                    <button asp-action="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                }
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Address.FirstName"></label>
                <input asp-for="User.Address.FirstName" class="form-control" />
                <span asp-validation-for="User.Address.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Address.Surname"></label>
                <input asp-for="User.Address.Surname" class="form-control" />
                <span asp-validation-for="User.Address.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.PhoneNumber"></label>
                <input asp-for="User.PhoneNumber" class="form-control" />
                <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Address.StreetAddress"></label>
                <input asp-for="User.Address.StreetAddress" class="form-control" />
                <span asp-validation-for="User.Address.StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Address.PostalCode"></label>
                <input asp-for="User.Address.PostalCode" class="form-control" />
                <span asp-validation-for="User.Address.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Address.City"></label>
                <input asp-for="User.Address.City" class="form-control" />
                <span asp-validation-for="User.Address.City" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
